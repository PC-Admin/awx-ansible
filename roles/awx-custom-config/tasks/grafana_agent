
- name: Download Grafana Agent binary
  delegate_to: '{{ backup_server_ip }}'
  get_url:
    url: "https://github.com/grafana/agent/releases/download/v0.29.0/agent-linux-amd64.zip"
    dest: "/tmp/agent-linux.zip"
    mode: '0644'

- name: Unarchive Grafana Agent binary
  delegate_to: '{{ backup_server_ip }}'
  unarchive:
    src: "/tmp/agent-linux.zip"
    dest: "/usr/local/bin"
    remote_src: yes
    mode: '0755'

- name: Create directory for Grafana Agent
  delegate_to: '{{ backup_server_ip }}'
  file:
    path: "/etc/grafana-cloud"
    state: directory
    mode: '0755'

- name: Create config file for Grafana Agent
  delegate_to: '{{ backup_server_ip }}'
  ansible.builtin.template:
    src: "{{ role_path }}/templates/grafana-agent.yml.j2"
    dest: "/etc/grafana-cloud/agent-config.yaml"

- name: Add user 'grafana-agent'
  delegate_to: '{{ backup_server_ip }}'
  user:
    name: grafana-agent
    create_home: no
    shell: /bin/false

- name: Create service file for Grafana Agent
  delegate_to: '{{ backup_server_ip }}'
  copy:
    dest: "/etc/systemd/system/grafana-agent.service"
    content: |
      [Unit]
      Description=Grafana Agent

      [Service]
      User=grafana-agent
      ExecStart=/usr/local/bin/agent-linux-amd64 --config.file=/etc/grafana-cloud/agent-config.yaml
      Restart=always

      [Install]
      WantedBy=multi-user.target

- name: Start Grafana Agent service
  delegate_to: '{{ backup_server_ip }}'
  systemd:
    daemon_reload: yes
    name: grafana-agent
    enabled: yes
    state: restarted

---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: awx

generatorOptions:
  disableNameSuffixHash: true

secretGenerator:
#  - name: awx-secret-tls
#    type: kubernetes.io/tls
#    files:
#      - tls.crt
#      - tls.key

  - name: awx-postgres-configuration
    type: Opaque
    literals:
      - host=awx-postgres-13
      - port=5432
      - database=awx
      - username=awx
      - password={{ admin_password }}
      - type=managed

  - name: awx-admin-password
    type: Opaque
    literals:
      - password={{ admin_password }}

resources:
  - pv.yaml
  - pvc.yaml
  - awx.yaml
